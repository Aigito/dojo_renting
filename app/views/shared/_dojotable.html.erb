<br>
<table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Dojo Space</th>
        <th>Price per Day</th>
        <th>Location</th>
        <th>Suitable For</th>
      </tr>
    </thead>
      <% @dojo_spaces.each do |space| %>
        <tr>
          <td><%= link_to space.name, dojo_space_path(space) %></td>
          <td><%= space.price %></td>
          <td><%= space.location %></td>
          <td><%= space.martial_art %></td>
        </tr>
      <% end %>
</table>
